{
  "name": "kx-splitter",
  "version": "1.0.0",
  "description": "A web utility used to separate single-file HTML apps into HTML, CSS, and JS. It can also combine.",
  "main": "/src/index.html",
  "scripts": {
    "start": "npx serve src",
    "format": "npx prettier . --write",
    "format:check": "npx prettier . --check",
    "lint:fix": "npx eslint . --fix",
    "lint": "npx eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kx1xixit/splitter.git"
  },
  "keywords": [
    "html",
    "css",
    "javascript",
    "splitter",
    "combiner",
    "utility",
    "web-tool",
    "developer-tools"
  ],
  "author": "",
  "license": "KBEC-1.0",
  "bugs": {
    "url": "https://github.com/kx1xixit/splitter/issues"
  },
  "homepage": "https://github.com/kx1xixit/splitter#readme",
  "devDependencies": {
    "eslint": "^10.0.0",
    "prettier": "^3.8.1",
    "serve": "^14.2.0"
  }
}
